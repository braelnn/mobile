<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rest"
    tools:context=".DestinationActivity">



    <TextView
        android:text="Get a room"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/destinationtext" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:ems="10"
        android:gravity="center"
        android:hint="Fullname"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter the email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@color/black"
        android:padding="8dp"
        android:ems="10"
        android:layout_below="@+id/fullname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/email"
        android:gravity="center"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:padding="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="phone number"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <TextView
        android:id="@+id/textlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Choose location"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlocation"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:padding="15dp"
        android:ems="10"
        android:gravity="center"
        android:hint="location"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textflats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Select apartments"
        android:textColor="@color/black"
        android:textSize="17sp" />
    <Spinner
        android:id="@+id/flats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textflats"
        android:layout_centerHorizontal="true"

        android:background="@color/black"
        android:padding="15dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Flats Name"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flats"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Room number"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/norooms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textrooms"
        android:layout_centerHorizontal="true"

        android:ems="10"
        android:background="@color/black"
        android:textColor="@color/white"
        android:padding="15dp"
        android:gravity="center"
        android:hint="Room number"
        android:inputType="number"

        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btnroom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/norooms"
        android:layout_marginTop="20dp"
        android:text="Book Room " />



</RelativeLayout>