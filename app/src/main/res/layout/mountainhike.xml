    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:id="@+id/textadult"
        android:text="No. of adult"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <Spinner
        android:id="@+id/adult"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textadult"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:textColor="@color/white"

        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:fontFamily="serif"
        android:hint="Password"
        android:padding="15dp"

        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="126dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adult"
        android:id="@+id/textchild"
        android:text="No. of children"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />


    <Spinner
        android:id="@+id/children"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textchild"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:fontFamily="serif"
        android:hint="Password"
        android:padding="15dp"


        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="126dp" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/children"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:text="Submit details!"
        android:textColor="#af0b0f"
        android:textSize="25sp" />








</RelativeLayout>