<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rest"
    tools:context=".AddroomActivity">



    <TextView
        android:text="ROOM ADD!!"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/destinationtext" />


    <TextView
        android:id="@+id/textlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationtext"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Enter location"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlocation"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:ems="10"
        android:gravity="center"
        android:hint="location"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textflats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Apartment Name"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/flats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textflats"
        android:layout_centerHorizontal="true"

        android:background="@color/black"
        android:ems="10"
        android:gravity="center"
        android:hint="Flats Name"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flats"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Room Number"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/norooms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textrooms"
        android:layout_centerHorizontal="true"

        android:background="@color/black"
        android:ems="10"
        android:gravity="center"
        android:hint="Room number"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btnAddroom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/norooms"
        android:layout_marginTop="20dp"
        android:text="Add Room " />



</RelativeLayout>